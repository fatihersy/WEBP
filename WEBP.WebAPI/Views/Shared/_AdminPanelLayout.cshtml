<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title> @ViewData["Title"] </title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/panel.css" />
	<script src="https://kit.fontawesome.com/d4b0984dff.js" crossorigin="anonymous"></script>
	<link href="https://fonts.googleapis.com/css2?family=Lobster+Two:wght@700&display=swap" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@1,700&display=swap" rel="stylesheet">
</head>
<body>


	<div id="panel-frame">

		<div id="sidepanel">
			<div class="sidepanel-item-div">

				<div class="sidepanel-item"> 
					<a class="side-item-link" asp-area="" asp-controller=Admin asp-action=List   > Listele  </a> 
				</div>

				<div class="sidepanel-item">
					<a class="side-item-link" asp-area="" asp-controller=Admin asp-action=Create > Olustur  </a>
				</div>

				<div class="sidepanel-item">
					<a class="side-item-link" asp-area="" asp-controller=Admin asp-action=Update > Guncelle </a>
				</div>

				<div class="sidepanel-item">
					<a class="side-item-link" asp-area="" asp-controller=Admin asp-action=Delete > Sil		</a>
				</div>

			</div>
		</div>

		<div id="panel-div"> @RenderBody() </div>

	</div>

	<script src="~/lib/jquery/dist/jquery.min.js">				</script>

	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js">	</script>

	<script src="~/js/panel.js" asp-append-version="true">		</script>

	@RenderSection("Scripts", required: false)
</body>
</html>