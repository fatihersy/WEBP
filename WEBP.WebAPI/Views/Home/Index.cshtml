@model WEBP.WebAPI.Models.HomeViewModel

@{
	Layout = "~/Views/Shared/_PageLayout.cshtml";
	ViewData["Title"] = "Home Page";
}

<div class="content-header-div">

    <!--image slider start-->
    <div class="slider">
      <div class="slides">
        <!--radio buttons start-->
        <input type="radio" name="radio-btn" id="radio1">
        <input type="radio" name="radio-btn" id="radio2">
        <input type="radio" name="radio-btn" id="radio3">
        <input type="radio" name="radio-btn" id="radio4">
        <!--radio buttons end-->
        <!--slide images start-->
        <div class="slide first">
          <img src="Resources/1.jpg" alt="">
        </div>
        <div class="slide">
          <img src="Resources/2.jpg" alt="">
        </div>
        <div class="slide">
          <img src="Resources/3.jpg" alt="">
        </div>
        <div class="slide">
          <img src="Resources/4.jpg" alt="">
        </div>
        <!--slide images end-->
        <!--automatic navigation start-->
        <div class="navigation-auto">
          <div class="auto-btn1"></div>
          <div class="auto-btn2"></div>
          <div class="auto-btn3"></div>
          <div class="auto-btn4"></div>
        </div>
        <!--automatic navigation end-->
      </div>
      <!--manual navigation start-->
      <div class="navigation-manual">
        <label for="radio1" class="manual-btn"></label>
        <label for="radio2" class="manual-btn"></label>
        <label for="radio3" class="manual-btn"></label>
        <label for="radio4" class="manual-btn"></label>
      </div>
      <!--manual navigation end-->
    </div>
    <!--image slider end-->
	
</div>

<div class="posts">

		@foreach (var item in Model.Blogs)
		{
			<a class="post" href="blog?id=@item.uniqueid" @item.category>
				<div class="post-img"></div>
				<div class="post-info">
					<h6 class="post-title">@item.title</h6>
				</div>
			</a>
		}

		<nav id="pagination-nav">
			<ul class="pagination">

				<li class="pg-link">
					<a href="/?page=1">First</a>
				</li>

				@for (var i = 1; i <= ViewBag.ipages; i++)
				{
					if (i == ViewBag.page)
					{
						<li class="pg-link active-link"> <a href="/?page=@i">@i</a> </li>

					}
					else
					{
						<li class="pg-link"> <a href="/?page=@i">@i</a> </li>

					}
				}

				<li class="pg-link">
					<a href="/?page=@ViewBag.ipages">Last</a>
				</li>

			</ul>
		</nav>
		
		
		
		
		
		<script type="text/javascript">
			var counter = 1;
			setInterval(function(){
			  document.getElementById('radio' + counter).checked = true;
			  counter++;
			  if(counter > 4){
				counter = 1;
			  }
			}, 5000);
		</script>
		
</div>

