@model WEBP.WebAPI.Models.LogInViewModel

@{ 
	Layout = "~/Views/Shared/_LogingLayout.cshtml";
	ViewData["Title"] = "Create";
}

<div class="panel">


	@using (Html.BeginForm("LogIn", "Home", FormMethod.Post, new { enctype = "multipart/form-data", autocomplete="off" }))
	{
		<form>
			@Html.AntiForgeryToken()

			<div class="mb-3">
				<div class="input-group is-invalid">
					<div class="input-group-prepend">
						@Html.LabelFor(m => m.Login.UserName, new { @class = "input-group-text" })
					</div>
					@Html.TextBoxFor(m => m.Login.UserName, new { @class = "form-control" })
				</div>
				<small> @Html.ValidationMessageFor(m => m.Login.UserName, "", new { @class = "text-danger" }) </small>
			</div>

			<div class="mb-3">
				<div class="input-group is-invalid">
					<div class="input-group-prepend">
						@Html.LabelFor(m => m.Login.Password, new { @class = "input-group-text" })
					</div>
					@Html.PasswordFor(m => m.Login.Password, new { id = "Password", TextMode = "Password", @class = "form-control" })
				</div>
				<small> @Html.ValidationMessageFor(m => m.Login.Password, "", new { @class = "text-danger" }) </small>
			</div>
			
			<div>
				<input type="submit" value="Giriş Yap" class="btn btn-primary" />
				<a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="SingUp">Kayıt Ol</a>
			</div>

		</form>
	}


</div>